{
    "name": "node-typescript-template",
    "version": "1.0.0",
    "description": "",
    "main": "build/bundle.js",
    "bin": "build/bundle.js",
    "scripts": {
        "start": "nodemon .",
        "watch": "webpack --mode development --watch --color --progress",
        "serve": "concurrently npm:watch npm:start",
        "build": "webpack --mode production --color --progress",
        "pkg:win64": "pkg -t node14-win-x64 --out-path packages .",
        "pkg:win32": "pkg -t node14-win-x86 --out-path packages .",
        "pkg:linux64": "pkg -t node14-linux-x64 --out-path packages .",
        "pkg": "pkg --out-path packages .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "pkg": {
        "scripts": "build/**/*.js",
        "assets": "build/assets/**/*"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.20.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-webpack-plugin": "^2.5.1",
        "nodemon": "^2.0.7",
        "pkg": "^4.4.9",
        "ts-loader": "^8.0.17",
        "typescript": "^4.1.5",
        "webpack": "^5.22.0",
        "webpack-cli": "^4.5.0"
    }
}
